{
  "manifest_version": 2,

  "name": "Article category blocker",

  "description": "Block front page articles by category type",

  "version": "1.0.5",

  "icons":
  {
    "32": "img/1406848496_icon-ios7-trash-outline.png"
  },

  "author":
  [
    {
      "name": "Rune Bjerke",
      "email": "plusblock.chrome@green.spoox.org"
    }    
  ],

  "update_url": "https://github.com/sp00x/chrome-no-plus-block/blob/master/updates.xml?raw=true",

  "permissions":
  [
    "http://*/*",
    "https://*/*",
    "storage"
  ],

  "content_scripts":
  [
    {
      "matches":
      [
        "http://*/*",
        "https://*/*"
      ],
      "js": [ "common.js", "content_script.js" ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "background":
  {
    "scripts":
    [
      "background.js"
    ],
    "persistent": false
  },
  
  "browser_action":
  {
    "default_icon": "img/1406848496_icon-ios7-trash-outline.png",
    "default_popup": "details.html"
  },

  "options_page": "options.html"
}